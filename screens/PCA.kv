#:kivy 1.11.0
SpotifyScreen:
    name: 'PCA - Visualizing K Clusters'
    ScrollView:
        do_scroll_x: False
        do_scroll_y: False

        AnchorLayout:
            size_hint_y: None
            height: content.height
            minimum_width: '60dp'
            
            GridLayout:
                id: content
                cols: 1
                spacing: '8dp'
                padding: '8dp'
                size_hint: (.8, None)
                height: self.minimum_height
    Label:
        size_hint_y: None
        size: [40, 40]
        #padding

    BoxLayout:
        orientation:'horizontal'
        height: '32dp'
        Button:
            disabled: app.kmeans_disabled or app.stats['scraping']
            size_hint_y: None
            size_hint_x: .8
            height: '48dp'
            text: 'Visualize Clusters'
            on_press: app.show_pca(cluster_count.text)
        Spinner:
            id: cluster_count
            size_hint_x: .2
            size_hint_y: None
            text: 'Count'
            values: [str(i) for i in range (2,11)]
            height: '48dp'

    Image:
        id: pca
        size_hint_y: None
        mipmap: True
        source: app.pca_source
        size: self.texture_size[0], min(self.texture_size[1], 450)
        anim_delay: 0.03